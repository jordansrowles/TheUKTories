<adonis:AdonisWindow x:Class="TheUKTories.Dashboard.Dialogs.SourceItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheUKTories.Dashboard.Dialogs"
        xmlns:reusables="clr-namespace:TheUKTories.Dashboard.Reusables"
        xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Edit a source item" Height="217" Width="370">
    <adonis:AdonisWindow.Resources>
    </adonis:AdonisWindow.Resources>
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Date" />
            <TextBox />
            <Label Content="Source" />
            <TextBox />
            <Label Content="Link" />
            <TextBox />
            <Separator Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Submit" Margin="5"/>
                <Button Content="Cancel" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</adonis:AdonisWindow>
