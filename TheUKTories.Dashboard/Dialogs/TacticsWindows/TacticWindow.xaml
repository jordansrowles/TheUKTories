<adonis:AdonisWindow x:Class="TheUKTories.Dashboard.Dialogs.TacticsWindows.TacticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheUKTories.Dashboard.Dialogs.TacticsWindows"
        mc:Ignorable="d"
        xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        Title="Alt-Right Tactic" Height="308" Width="361"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Title" />
            <TextBox x:Name="tbString"/>
            <Label Content="Web Link" />
            <TextBox x:Name="tbLink"/>
            <Label Content="Subtitle" />
            <TextBox x:Name="tbSubstring" Height="120" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            <Separator Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnSubmit" Content="Submit" Margin="5" Click="btnSubmit_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" Margin="5" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</adonis:AdonisWindow>
