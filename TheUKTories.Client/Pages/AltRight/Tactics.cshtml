@page
@model TheUKTories.Client.Pages.AltRight.TacticsModel
@{
    ViewData["Title"] = "The UK Tories - Tactics";
    ViewData["SelectedTopItem"] = "Tactics";
}

<govuk-breadcrumbs>
    <govuk-breadcrumbs-item asp-page="/Index">Home</govuk-breadcrumbs-item>
    <govuk-breadcrumbs-item>Alt-Right</govuk-breadcrumbs-item>
    <govuk-breadcrumbs-item asp-page="/AltRight/Tactics">Tactics</govuk-breadcrumbs-item>
</govuk-breadcrumbs>

<h1 class="govuk-heading-l">Alt-Right Tactics</h1>
<hr class="govuk-section-break--visible" />

<dl class="govuk-summary-list">

    @foreach (ARTactics item in Model.Tactics.OrderBy(o => o.String))
    {
    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
            @item.String
        </dt>
        <dd class="govuk-summary-list__value">
            @item.Substring
        </dd>
        <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="@item.WikiLink">
                Wiki
            </a>
        </dd>
        @if (User.Identity.IsAuthenticated)
        {
            <dd class="govuk-summary-list__actions">
                <a href="/Portal/AltRight/Tactic?partition=@item.String&id=@item.Id">Edit</a>
            </dd>
        }
    </div>
    }


</dl>
