<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head', { title: title }) %>
  </head>
  <body class="govuk-template__body">
    <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>
    <%- include('../partials/header', { selection: 'people' }) %>

    <div class="govuk-width-container">
      <main class="govuk-main-wrapper" id="main-content" role="main">
        <h1 class="govuk-heading-xl">People Directory</h1>
        <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
        
        <span class="govuk-caption-l">PMs, Ministers, MPs, Lords, Influential People</span>
        <h2 class="govuk-heading-l">United Kingdom</h2>
        <ul class="govuk-list">
          <% people.filter(i => i.country == "UK")
            .forEach(function(person) { %>
              <li>
                <a class="govuk-link" href="/people/<%= person.country %>/<%= person.id %>"><%= person.full_name %></a> | <small><%= person.current_title %></small>
              </li>
            <% }); %>
      </main>
    </div>

    <%- include('../partials/footer') %>
    <script src="/javascripts/govuk.js"></script>
    <script>
      window.GOVUKFrontend.initAll()
    </script>
  </body>
</html>
