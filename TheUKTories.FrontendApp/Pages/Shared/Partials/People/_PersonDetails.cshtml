@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model Person

@{
    string StorageUrl = Configuration["AzureBlobStorage"];
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-quarter">
        <img style="display: inline;" src="@StorageUrl/profiles/@Model.ProfileImageBlobUri"
            alt="@Model.ProfileImageBlobUri.ToString()" height="200" width="200">
    </div>
    <div class="govuk-grid-column-three-quarters">
        <span class="govuk-caption-m"><govuk-tag class="govuk-tag--green">Current</govuk-tag> @Model.CurrentTitle</span>
        <h1 class="govuk-heading-l">@Model.FullName</h1>
        @if (Model.Titles != null)
        {
            <ul class="govuk-list">
                @foreach (var item in Model.GetTitles())
                {
                    <li>@item</li>
                }
            </ul>
        }

    </div>
    
</div>