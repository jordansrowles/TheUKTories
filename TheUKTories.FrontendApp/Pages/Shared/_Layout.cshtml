<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta name="theme-color" content="#0b0c0c">
    <title>@ViewData["Title"]</title>
    <link href="~/lib/govuk/govuk.css" rel="stylesheet">
    <link rel="stylesheet" href="~/TheUKTories.FrontendApp.styles.css" asp-append-version="true" />
    @RenderSection("Head", required: false)
</head>
<body class="govuk-template__body ">
    <script>
        document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');

    </script>

    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>


    @await Html.PartialAsync("Partials/General/_MainMenu", new MainMenuViewModel() {
        Links = new Dictionary<string, string>()
        {
            { "Austerity", "/UK/Austerity" },
            { "Covid", "/UK/Covid/" },
            { "Tactics", "/Altright" },
            { "Contact", "/Contact" },
        },
        SelectedKey = ""
    });

    <div class="govuk-width-container">
        <partial name="Partials/_LoginPartial" />
        <main class="govuk-main-wrapper" id="main-content" role="main">
            @RenderBody()
        </main>
    </div>

    @await Html.PartialAsync("Partials/General/_Footer", new Dictionary<string, string>() {
        { "About", "/About" }, { "Privacy", "/Privacy" }, { "Contact", "/Contact" }, { "Source Code", "https://github.com/jordansrowles/theuktories" }
    });

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="~/lib/govuk/all.js"></script>
    <script>
        window.GOVUKFrontend.initAll()
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>