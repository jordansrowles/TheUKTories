@page
@model TheUKTories.FrontendApp.Pages.Admin.Messages.IndexModel

@{
    ViewData["Title"] = "Contacts";
}

@await Html.PartialAsync("Partials/_PageTitlePartial", "Messages from website form")

@foreach (var item in Model.Contact)
{
<govuk-summary-list>
    <govuk-summary-list-row>
        <govuk-summary-list-row-key>
            @Html.DisplayNameFor(model => model.Contact[0].Name)
        </govuk-summary-list-row-key>
        <govuk-summary-list-row-value>
            @Html.DisplayFor(modelItem => item.Name)
        </govuk-summary-list-row-value>
    </govuk-summary-list-row>
    <govuk-summary-list-row>
        <govuk-summary-list-row-key>
            @Html.DisplayNameFor(model => model.Contact[0].EmailAddress)
        </govuk-summary-list-row-key>
        <govuk-summary-list-row-value>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </govuk-summary-list-row-value>
    </govuk-summary-list-row>
    <govuk-summary-list-row>
        <govuk-summary-list-row-key>
            @Html.DisplayNameFor(model => model.Contact[0].Details)
        </govuk-summary-list-row-key>
        <govuk-summary-list-row-value>
            @Html.DisplayFor(modelItem => item.Details)
        </govuk-summary-list-row-value>
    </govuk-summary-list-row>
    <govuk-summary-list-row>
        <govuk-summary-list-row-key>
            @Html.DisplayNameFor(model => model.Contact[0].Message)
        </govuk-summary-list-row-key>
        <govuk-summary-list-row-value>
            @Html.DisplayFor(modelItem => item.Message)
        </govuk-summary-list-row-value>
    </govuk-summary-list-row>

    <govuk-summary-list-row>
        <govuk-summary-list-row-action asp-page="./Details" asp-route-id="@item.Id">Details</govuk-summary-list-row-action>
        <govuk-summary-list-row-action asp-page="./Delete" asp-route-id="@item.Id">Delete</govuk-summary-list-row-action>
    </govuk-summary-list-row>
</govuk-summary-list>
}

