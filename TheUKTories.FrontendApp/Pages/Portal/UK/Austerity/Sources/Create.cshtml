@page
@model TheUKTories.FrontendApp.Pages.Portal.UK.Austerity.Sources.CreateModel

@{
    ViewData["Title"] = "Create";
}

@await Html.PartialAsync("Partials/_PageTitlePartial", "New Austerity Measure Source")
<p class="govuk-body">Measure: (@Model.SelectedMeasure.UKAusterityMeasureId) - @Model.SelectedMeasure.Title</p>


<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="SelectedMeasure.UKAusterityMeasureId" />

    <govuk-input asp-for="UKAusterityMeasureSource.Source" type="text"/>
    <span asp-validation-for="UKAusterityMeasureSource.Source" class="text-danger"/>

    <govuk-input asp-for="UKAusterityMeasureSource.Link" type="text"/>
    <span asp-validation-for="UKAusterityMeasureSource.Link" class="text-danger"/>   
            
    <govuk-date-input asp-for="UKAusterityMeasureSource.Date" />
    <span asp-validation-for="UKAusterityMeasureSource.Date" class="text-danger"/>

    <govuk-button type="submit" value="Create">Create</govuk-button>
</form>

<a asp-page="../Index" class="govuk-button">Back to Austerity</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
