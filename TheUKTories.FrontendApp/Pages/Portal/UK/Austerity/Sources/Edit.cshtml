@page
@model TheUKTories.FrontendApp.Pages.Portal.UK.Austerity.Sources.EditModel

@{
    ViewData["Title"] = "Edit";
}

@await Html.PartialAsync("Partials/General/Titles/_Title", "Edit existing austerity item source")

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UKAusterityMeasureSource.UKAusterityMeasureId" />
    <input type="hidden" asp-for="UKAusterityMeasureSource.UKAusterityMeasureSourceId" />

    <govuk-input asp-for="UKAusterityMeasureSource.Source" type="text"/>
    <span asp-validation-for="UKAusterityMeasureSource.Source" class="text-danger"/>

    <govuk-input asp-for="UKAusterityMeasureSource.Link" type="text"/>
    <span asp-validation-for="UKAusterityMeasureSource.Link" class="text-danger"/>   
            
    <govuk-date-input asp-for="UKAusterityMeasureSource.Date" />
    <span asp-validation-for="UKAusterityMeasureSource.Date" class="text-danger"/>

    <govuk-button type="submit" value="Create">Create</govuk-button>
</form>

<div>
    <a class="govuk-button govuk-button--warning" asp-page="./Delete" asp-route-id="@Model.UKAusterityMeasureSource.UKAusterityMeasureSourceId">Delete</a>
    <a class="govuk-button" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
