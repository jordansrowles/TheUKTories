@page
@model TheUKTories.FrontendApp.Pages.Portal.UK.Covid.Contracts.PPEContracts.EditModel

@{
    ViewData["Title"] = "Edit";
}

@await Html.PartialAsync("Partials/General/Titles/_Title", "Edit Covid Contract")
<p class="govuk-body">Company: (@Model.GovPPEContract.GovPPEContractId) - @Model.GovPPEContract.Reference</p>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="GovPPEContract.GovPPEContractCompanyId" />

    <govuk-input asp-for="GovPPEContract.Description" type="text"/>
    <span asp-validation-for="GovPPEContract.Description" class="text-danger"/>  

    <govuk-input asp-for="GovPPEContract.Source" type="text"/>
    <span asp-validation-for="GovPPEContract.Source" class="text-danger"/>

    <govuk-input asp-for="GovPPEContract.Link" type="text"/>
    <span asp-validation-for="GovPPEContract.Link" class="text-danger"/>  
    
    <govuk-input asp-for="GovPPEContract.Reference" type="text"/>
    <span asp-validation-for="GovPPEContract.Reference" class="text-danger"/>  

    <govuk-input asp-for="GovPPEContract.Location" type="text"/>
    <span asp-validation-for="GovPPEContract.Location" class="text-danger"/> 
    
    <govuk-input asp-for="GovPPEContract.Cost" type="text"/>
    <span asp-validation-for="GovPPEContract.Cost" class="text-danger"/> 
            
    <govuk-date-input asp-for="GovPPEContract.Date" />
    <span asp-validation-for="GovPPEContract.Date" class="text-danger"/>

    <govuk-button type="submit" value="Create">Create</govuk-button>
</form>


<a asp-page="./Index" class="govuk-button">All Contracts</a>
<a asp-page="./Create" class="govuk-button">New Contract</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
