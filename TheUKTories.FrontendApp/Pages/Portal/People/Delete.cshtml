@page
@model TheUKTories.FrontendApp.Pages.Portal.People.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

@await Html.PartialAsync("Partials/General/Titles/_Title", "Are you sure you want to delete this person?")
@await Html.PartialAsync("Partials/Portal/DetailViews/_Person", Model.Person)
    
<form method="post">
    <input class="govuk-button" type="hidden" asp-for="Person.PersonId" />
    <input type="submit" value="Delete" class="govuk-button govuk-button--warning" />
    <a class="govuk-button" asp-page="./Index">Back to List</a>
</form>
