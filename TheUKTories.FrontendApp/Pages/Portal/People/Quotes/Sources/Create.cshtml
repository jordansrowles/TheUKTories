@page
@model TheUKTories.FrontendApp.Pages.Portal.People.Quotes.Sources.CreateModel

@{
    ViewData["Title"] = "Create";
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@await Html.PartialAsync("Partials/General/Titles/_Title", "New Person Quote Source")
<p class="govuk-body">Measure: (@Model.PersonQuote.PersonQuoteId) - @Model.PersonQuote.Quote</p>


<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PersonQuote.PersonQuoteId" />

    <govuk-input asp-for="PersonQuoteSource.Source" type="text" />
    <span asp-validation-for="PersonQuoteSource.Source" class="text-danger" />

    <govuk-input asp-for="PersonQuoteSource.Link" type="text" />
    <span asp-validation-for="PersonQuoteSource.Link" class="text-danger" />

    <govuk-date-input asp-for="PersonQuoteSource.Date" />
    <span asp-validation-for="PersonQuoteSource.Date" class="text-danger" />

    <govuk-button type="submit" value="Create">Create</govuk-button>
</form>

<a asp-page="../Index" class="govuk-button">Back to Quotes</a>
<a asp-page="../Create" class="govuk-button">New Quote</a>