<ul id="covid-list" class="separated-list">
</ul>
<script>
$.getJSON("/data/covidresponse.json", function(json) {
  var json = JSON.parse(JSON.stringify(json));
  var list = document.getElementById('covid-list');

  for (var item = 0; item < json.items.length; item++) {
    var obj = json.items[item];
    var li = document.createElement('li');
    li.innerText = obj.string;

    var sm = document.createElement('small');
    sm.innerText = ' - '

    for (var s = 0; s < json.items[item].sources.length; s++) {
      var source = obj.sources[s];
      var link = document.createElement('a');
      link.setAttribute('href', source.link);
      link.setAttribute('target', '_blank');

      var cite = document.createElement('cite');
      cite.setAttribute('title', source.date);
      cite.innerText = source.source;
      
      link.append(cite);
      sm.append(link);
      li.append(sm);
    }

    list.append(li);
  }

});
</script>